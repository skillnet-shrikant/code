<ContentTemplate xmlns="http://endeca.com/schema/content-template/2008"
                 xmlns:editors="editors"
                 xmlns:xavia="http://endeca.com/schema/xavia/2010"
                 type="MainContent">
  <Description>Header banner displayed in the main content section of a two-column page - For use with SplitColumnPage and TwoColumnPage templates</Description>
  <ThumbnailUrl>thumbnail.jpg</ThumbnailUrl>
  <ContentItem>
    <Name>CategoryHeaderBanner</Name>
    <Property name="imageURL1">
      <String/>
    </Property>
		<Property name="imageAltText1">
      <String/>
    </Property>
		<Property name="imageH2Text1">
      <String/>
    </Property>
		<Property name="imageParaText1">
      <String/>
    </Property>
	<Property name="imageLink1">
		<String/>
	</Property>
    <Property name="idTag">
      <String/>
    </Property>
	<Property name="mobileHide">
        <Boolean>false</Boolean>
	</Property>
	<Property name="desktopHide">
		<Boolean>false</Boolean>
	</Property>
	<Property name="active">
		<Boolean>true</Boolean>
	</Property>
	<Property name="anchorTag">
      <String/>
    </Property>
  </ContentItem>
  <EditorPanel>
    <BasicContentItemEditor>
	<editors:BooleanEditor propertyName="active" label="Active" bottomLabel="When checked content will be active" enabled="true"/>
	<editors:BooleanEditor propertyName="desktopHide" label="Hide in Desktop View" bottomLabel="When checked content will be hidden in desktop view Only available for mobile View" enabled="true"/>
	<editors:BooleanEditor propertyName="mobileHide" label="Hide in Mobile View" bottomLabel="When checked content will be hidden in mobile view Only available for Desktop View" enabled="true"/>
	<editors:StringEditor propertyName="anchorTag" label="Anchor Tag" bottomLabel="Label used for hyperlinking the section" enabled="true"/>
      <GroupLabel label="PromoFullWidth"/>
			<GroupLabel label="Promo1"/>
      <editors:StringEditor propertyName="imageURL1" label="Image Path" bottomLabel="${property.media.bottomLabel}" enabled="true"/>
			<editors:StringEditor propertyName="imageAltText1" label="Image Alt Text" bottomLabel="" enabled="true"/>
			<editors:StringEditor propertyName="imageH2Text1" label="H2 Text on Image" bottomLabel="" enabled="true"/>
			<editors:StringEditor propertyName="imageParaText1" label="Para Text on Image" bottomLabel="" enabled="true" height="72"/>
			<editors:StringEditor propertyName="imageLink1" label="Hyperlink on Image" bottomLabel="" enabled="true"/>
			<editors:StringEditor propertyName="idTag" label="Id Tag" bottomLabel="" enabled="true"/>
    </BasicContentItemEditor>
  </EditorPanel>
</ContentTemplate>

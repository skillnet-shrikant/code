<ContentTemplate xmlns="http://endeca.com/schema/content-template/2008"
                 xmlns:editors="editors"
                 xmlns:xavia="http://endeca.com/schema/xavia/2010"
                 type="MainContent">
  <Description>Grid of images in rows of 4 or 5 across displayed in the main content section of a page - For use with OneColumnPage, PromoPage, SplitColumnPage, and TwoColumnPage templates</Description>
  <ThumbnailUrl>thumbnail.jpg</ThumbnailUrl>
  <ContentItem>
    <Name>PromoSlotGrid</Name>
	<Property name="sectionTitle">
      <String/>
    </Property>
	<Property name="promoSlotsPerRow">
      <String>4</String>
    </Property>
    <Property name="PromoSlots">
      <ContentItemList type="PromoSlot" />
    </Property>
	<Property name="customPaddingTitleEnabled">
        <Boolean>false</Boolean>
    </Property>
	<Property name="contentTitlePadding">
		<String/>
	</Property>
	<Property name="customPaddingRowEnabled">
        <Boolean>false</Boolean>
    </Property>
	<Property name="contentRowPadding">
		<String/>
	</Property>
	<Property name="mobileHide">
        <Boolean>false</Boolean>
	</Property>
	<Property name="desktopHide">
		<Boolean>false</Boolean>
	</Property>
	<Property name="active">
		<Boolean>true</Boolean>
	</Property>
	<Property name="anchorTag">
      <String/>
    </Property>
  </ContentItem>
  <EditorPanel>
    <BasicContentItemEditor>
		<editors:BooleanEditor propertyName="active" label="Active" bottomLabel="When checked content will be active" enabled="true"/>
		<editors:BooleanEditor propertyName="desktopHide" label="Hide in Desktop View" bottomLabel="When checked content will be hidden in desktop view Only available for mobile View" enabled="true"/>
		<editors:BooleanEditor propertyName="mobileHide" label="Hide in Mobile View" bottomLabel="When checked content will be hidden in mobile view Only available for Desktop View" enabled="true"/>
		<editors:StringEditor propertyName="anchorTag" label="Anchor Tag" bottomLabel="Label used for hyperlinking the section" enabled="true"/>
		<GroupLabel label="PromoGrid"/>
		<editors:StringEditor propertyName="sectionTitle" label="Section Title" bottomLabel="" enabled="true"/>
		<editors:NumericStepperEditor label="Number of Promos per Row" propertyName="promoSlotsPerRow" minValue="4" maxValue="5" bottomLabel="Enter Number of Promos required per Row(4-5)" enabled="true" />
		<GroupLabel label="Custom Padding Configuration"/>
		<editors:BooleanEditor propertyName="customPaddingTitleEnabled" label="Enable Custom Padding For Title" enabled="true"/>
		<editors:NumericStepperEditor propertyName="contentTitlePadding" label="Custom Padding For Title on Top and Bottom" bottomLabel="Enter custom Padding to be applied for the Title in pixels" enabled="true" />
		<editors:BooleanEditor propertyName="customPaddingRowEnabled" label="Enable Custom Padding For Content" enabled="true"/>
		<editors:NumericStepperEditor propertyName="contentRowPadding" label="Custom Padding For Content on Top and Bottom" bottomLabel="Enter custom Padding to be applied for the Section in pixels" enabled="true" />
	</BasicContentItemEditor>
  </EditorPanel>
</ContentTemplate>

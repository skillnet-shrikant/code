<ContentTemplate xmlns="http://endeca.com/schema/content-template/2008"
                 xmlns:editors="editors"
                 xmlns:xavia="http://endeca.com/schema/xavia/2010"
                 type="MainContent">
  <Description>Full site width promotional banner displayed in the main content section of a page - For use with OneColumnPage, PromoPage, and SplitColumnPage templates</Description>
  <ThumbnailUrl>thumbnail.jpg</ThumbnailUrl>
  <ContentItem>
    <Name>PromoFullWidth</Name>
		<Property name="imageURL1">
			<String/>
		</Property>
		<Property name="imageMedium">
			<String/>
		</Property>
		<Property name="imageLarge">
			<String/>
		</Property>
		<Property name="imageAltText1">
			<String/>
		</Property>
		<Property name="imageH2Text1">
			<String/>
		</Property>
		<Property name="imageParaText1">
      <String/>
    </Property>
		<Property name="overlay">
			<String/>
		</Property>
		<Property name="overlayVerticalAlignment">
			<String>top</String>
		</Property>
		<Property name="overlayHorizontalAlignment">
			<String>left</String>
		</Property>
		<Property name="imageButtonLabel1">
      <String/>
    </Property>
	<Property name="imageButtonHref1">
      <String/>
    </Property>
    <Property name="idTag">
      <String/>
    </Property>
	<Property name="buttonCustomWidthEnabled">
        <Boolean>false</Boolean>
    </Property>
	<Property name="buttonCustomWidth">
		<String/>
	</Property>
	<Property name="customPaddingRowEnabled">
        <Boolean>false</Boolean>
    </Property>
	<Property name="contentRowPadding">
		<String/>
	</Property>
	<Property name="noOverLayEnabled">
        <Boolean>false</Boolean>
    </Property>
	<Property name="mobileHide">
        <Boolean>false</Boolean>
	</Property>
	<Property name="desktopHide">
		<Boolean>false</Boolean>
	</Property>
	<Property name="active">
		<Boolean>true</Boolean>
	</Property>
	<Property name="anchorTag">
      <String/>
    </Property>
  </ContentItem>
  <EditorPanel>
    <BasicContentItemEditor>
		<editors:BooleanEditor propertyName="active" label="Active" bottomLabel="When checked content will be active" enabled="true"/>
		<editors:BooleanEditor propertyName="desktopHide" label="Hide in Desktop View" bottomLabel="When checked content will be hidden in desktop view Only available for mobile View" enabled="true"/>
		<editors:BooleanEditor propertyName="mobileHide" label="Hide in Mobile View" bottomLabel="When checked content will be hidden in mobile view Only available for Desktop View" enabled="true"/>
		<editors:StringEditor propertyName="anchorTag" label="Anchor Tag" bottomLabel="Label used for hyperlinking the section" enabled="true"/>
		 <GroupLabel label="Custom Padding Configuration"/>
			<editors:BooleanEditor propertyName="customPaddingRowEnabled" label="Enable Custom Padding For Content" enabled="true"/>
			<editors:NumericStepperEditor propertyName="contentRowPadding" label="Custom Padding For Content on Top and Bottom" bottomLabel="Enter custom Padding to be applied for the Section in pixels" enabled="true"/>
      <GroupLabel label="PromoFullWidth"/>
			<GroupLabel label="Promo1"/>
      <editors:StringEditor propertyName="imageURL1" label="Small Image URL (required)" bottomLabel="${property.imageSmall.bottomLabel}" enabled="true"/>
			<editors:StringEditor propertyName="imageMedium" label="Medium Image URL" bottomLabel="${property.imageMedium.bottomLabel}" enabled="true"/>
			<editors:StringEditor propertyName="imageLarge" label="Large Image URL" bottomLabel="${property.imageLarge.bottomLabel}" enabled="true"/>
			<editors:StringEditor propertyName="imageAltText1" label="Image Alt Text" enabled="true"/>
			<editors:StringEditor propertyName="imageH2Text1" label="H2 Text on Image" enabled="true"/>
			<editors:StringEditor propertyName="imageParaText1" label="Para Text on Image" enabled="true" height="72"/>
			<editors:BooleanEditor propertyName="noOverLayEnabled" label="Display Overlay Text below Banner Image" enabled="true" bottomLabel="When Selected Overlay text is displayed below the Image"/>
			<editors:ChoiceEditor propertyName="overlay" label="${property.overlay.label}" enabled="true">
				<choice label="none (default)" value=""/>
				<choice label="light" value="light"/>
				<choice label="dark" value="dark"/>
			</editors:ChoiceEditor>
			<editors:ChoiceEditor propertyName="overlayVerticalAlignment" label="${property.overlay.alignment.vertical.label}" enabled="true">
				<choice label="top (default)" value="top"/>
				<choice label="middle" value="middle"/>
				<choice label="bottom" value="bottom"/>
			</editors:ChoiceEditor>
			<editors:ChoiceEditor propertyName="overlayHorizontalAlignment" label="${property.overlay.alignment.horizontal.label}" enabled="true">
				<choice label="left (default)" value="left"/>
				<choice label="center" value="center"/>
				<choice label="right" value="right"/>
			</editors:ChoiceEditor>
			<editors:StringEditor propertyName="imageButtonLabel1" label="Button Label on Image" bottomLabel="" enabled="true"/>
			<editors:StringEditor propertyName="imageButtonHref1" label="Button Hyperlink on Image" bottomLabel="" enabled="true"/>
			<editors:StringEditor propertyName="idTag" label="Id Tag" bottomLabel="" enabled="true"/>
			<GroupLabel label="Button Custom Width Configuration"/>
			<editors:BooleanEditor propertyName="buttonCustomWidthEnabled" label="Enable Custom Width For Button" enabled="true"/>
			<editors:NumericStepperEditor propertyName="buttonCustomWidth" label="Custom Width For Button" bottomLabel="Enter custom Width to be applied for the Button in Percentage" minValue="0" maxValue="100" stepSize="1" enabled="true"/>
			
    </BasicContentItemEditor>
  </EditorPanel>
</ContentTemplate>
